<%= form_with(model: todo, local: true) do |form| %>
  <% if todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
      <% todo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content, id: :todo_content %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Todo.statuses.map { |key, value| [key.humanize, key] } %>
  </div>

  <div class="field">
    <%= form.label :project_id %>
    <%= form.select :project_id, Project.pluck(:title, :id) %>
  </div>

  <div class="field">
    <%= form.label :creator_id %>
    <%= form.select :creator_id, User.pluck(:username, :id) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
